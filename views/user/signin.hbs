<div style="margin-top: 180px;" class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header" style="float: left">
				<h4 class="modal-title" id="myModalLabel">Log in</h4>
			</div>

			<div class="modal-body">
				{{#if hasErrors}}
				<div class='alert alert-danger'>
					{{# each messages }}
						<p>{{this}}</p>
					{{/each}}
				</div>
				{{/if}}
				<form action='/user/signin' method='post' role="form">
					<div class="form-group">
						<div class="input-group">
							<input type="text" class="form-control" id="username" name="username" placeholder="Login">
							<label for="username" class="input-group-addon glyphicon glyphicon-user"></label>
						</div>
					</div>

					<div class="form-group">
						<div class="input-group">
							<input type="password" class="form-control" id="password" name="password" placeholder="Password">
							<label for="password" class="input-group-addon glyphicon glyphicon-lock"></label>
						</div>
					</div>
					<input type='hidden' name='_csrf' value='{{csrfToken}}'>
					<div class="checkbox">
						<label>
							<input type="checkbox"> Remember me
						</label>
					</div> 
					<div class="checkbox">
						<label>
							<a href="#">Forget password! </a>
						</label>
					</div> 

			</div> 
			<div class="modal-footer">
				<button type="submit" class="form-control btn btn-primary">Signin</button>

				</form>
			</div>